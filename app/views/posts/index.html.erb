<h1>Holly's Blog</h1>

<div>
  <h2> Posts </h2>
  <ul>
    <% @posts.each do | post | %>
      <li>
        <article>
          <h4>
            <%= link_to post.subject, post_path(post) %>
            <%= link_to "Edit", edit_post_path(post) %> |
            <%= link_to "View", post_path(post) %>
          </h4>
          By: <%= post.author.name %>
          (<%= post.created_at.strftime("%Y-%m-%d") %>,
          Num Comments: <%= post.comments.count %>)
          Category: <%= post.category.name ? post.category.name : ''%>
        </article>
        </li>
    <% end %>
  </ul>
</div>
<nav>
  <ul>
    <li><%= link_to "New Post", new_post_path %></li>
  </ul>
</nav>
