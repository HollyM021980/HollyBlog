<h2><%= @post.subject %></h2>

<article>
  <h3>Author: <%= @post.author.name %></h3>
  <h4>Created: <%= @post.created_at.strftime("%Y-%m-%d") %></h4>
  <h4>Category: <%= @post.category.name %></h4>
  <div>
    <%= @post.content %>
  </div>
</article>
</br>
<nav>
<%= link_to "Edit", edit_post_path(@post) %> |
<%= link_to "Return to Post Listing", posts_path %>
</nav>
